# =====================================================================
# APPLICATION
# =====================================================================
ENVIRONMENT=development
DEBUG=true
APP_NAME=Numerologist AI API
APP_VERSION=0.1.0

# =====================================================================
# DATABASE (PostgreSQL)
# =====================================================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/numerologist
DB_ECHO=false
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_PRE_PING=true
DB_ECHO_POOL=false

# Docker Postgres credentials (used by docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=numerologist

# =====================================================================
# REDIS (Cache & Session Store)
# =====================================================================
REDIS_URL=redis://localhost:6379
REDIS_POOL_SIZE=10
REDIS_POOL_TIMEOUT=30
REDIS_SOCKET_KEEPALIVE=true

# =====================================================================
# CORS & SECURITY
# =====================================================================
# For development: use ["*"], For production: use specific domains
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# =====================================================================
# API ENDPOINTS
# =====================================================================
API_PREFIX=/api
HEALTH_CHECK_ENDPOINT=/health

# =====================================================================
# LOGGING & MONITORING
# =====================================================================
LOG_LEVEL=INFO
# LOG_FORMAT not typically overridden in .env (has sensible default)

# =====================================================================
# TIMEOUTS & LIMITS
# =====================================================================
REQUEST_TIMEOUT=30
MAX_CONNECTION_ATTEMPTS=3
CONNECTION_RETRY_DELAY=1.0

# =====================================================================
# FEATURE FLAGS
# =====================================================================
ENABLE_DOCS=true
ENABLE_REDOC=true

# =====================================================================
# OPTIONAL: Backend API configuration (for Story 1.6)
# =====================================================================
BACKEND_URL=http://localhost:8000
