# ============================================================================
# VOICE BOT CONFIGURATION
# ============================================================================
# Copy this file to .env and fill in your API keys
# Never commit .env to version control!

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_NAME="Voice Bot API"
APP_VERSION="1.0.0"
DEBUG=true
ENVIRONMENT=development

# ============================================================================
# DATABASE (PostgreSQL)
# ============================================================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/voicebot

# Database Connection Pool
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_ECHO=false  # Set true to log SQL queries

# ============================================================================
# JWT AUTHENTICATION
# ============================================================================
# ⚠️  MUST change in production!
# Generate: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=dev-secret-change-in-production-MUST-BE-SECURE
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================================================
# VOICE PIPELINE SERVICES (REQUIRED)
# ============================================================================

# Daily.co - WebRTC Room Management
# Get from: https://dashboard.daily.co/ → Developers → API Keys
DAILY_API_KEY=

# Deepgram - Speech-to-Text
# Get from: https://console.deepgram.com/ → API Keys
DEEPGRAM_API_KEY=

# Azure OpenAI - Language Model
# Get from: https://portal.azure.com/ → Azure OpenAI Service → Keys and Endpoint
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_MODEL_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_API_VERSION=2024-09-01-preview

# ElevenLabs - Text-to-Speech
# Get from: https://elevenlabs.io/ → Profile → API Keys
ELEVENLABS_API_KEY=
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM  # Rachel voice (default)

# ============================================================================
# VOICE PIPELINE CONFIGURATION
# ============================================================================

# Language for voice conversations
# Options: en (English), vi (Vietnamese), es (Spanish), fr (French),
#          de (German), ja (Japanese), zh (Chinese), pt (Portuguese)
VOICE_LANGUAGE=en

# Voice Activity Detection (VAD) silence timeout in milliseconds
# Lower = faster response but may interrupt user
# Higher = waits longer but more natural
# Recommended: 800-1200ms
VAD_SILENCE_TIMEOUT_MS=1000

# ============================================================================
# CORS & SECURITY
# ============================================================================
# Comma-separated list of allowed origins
# Development: * (allow all)
# Production: https://yourdomain.com,https://app.yourdomain.com
CORS_ORIGINS=*

# ============================================================================
# OPTIONAL SERVICES
# ============================================================================

# Redis (for caching and session management)
REDIS_URL=redis://localhost:6379

# Google OAuth (if using social login)
GOOGLE_WEB_CLIENT_ID=
GOOGLE_ANDROID_CLIENT_ID=

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================================================
# NOTES
# ============================================================================
# 1. Daily.co API key format: starts with 'daily_'
# 2. Azure OpenAI endpoint must end with '/'
